<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddLaptopActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            >

            <TextView
                android:id="@+id/txtAddLaptop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Laptop"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand Laptop"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/txtAddLaptop"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edit_text"
                android:textColor="@color/black"
                android:hint="Brand Name"
                android:fontFamily="@font/poppins_medium"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/brand"
                />

            <TextView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Laptop"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edtBrand"
                app:layout_constraintStart_toStartOf="@id/edtBrand"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="https://googledrive.com"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/edit_text"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/img"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptop Price"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/edtImg"
                app:layout_constraintStart_toStartOf="@id/edtImg"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rp. 25.000.000"
                android:inputType="number"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/edit_text"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/price"
                />

            <TextView
                android:id="@+id/processor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Processor"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edtPrice"
                app:layout_constraintStart_toStartOf="@id/edtPrice"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtProcessor"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:hint="Intel Core i9 14th Gen"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/edit_text"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/processor"
                />

            <TextView
                android:id="@+id/graphics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Graphics"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edtProcessor"
                app:layout_constraintStart_toStartOf="@id/edtProcessor"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtGraphics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RTX 4090 Ultra"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/edit_text"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/graphics"
                />

            <TextView
                android:id="@+id/ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAM Capacity"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edtGraphics"
                app:layout_constraintStart_toStartOf="@id/edtGraphics"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtRam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="34GB"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/edit_text"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/ram"
                />

            <TextView
                android:id="@+id/rom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROM Capacity"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edtRam"
                app:layout_constraintStart_toStartOf="@id/edtRam"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtRom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="4TB"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/edit_text"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/rom"
                />

            <TextView
                android:id="@+id/benchmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benchmark Total"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/edtRom"
                app:layout_constraintStart_toStartOf="@id/edtRom"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtBenchmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="89999999"
                android:inputType="number"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/edit_text"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/benchmark"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                android:background="@drawable/btn_mint"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/edtBenchmark"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>